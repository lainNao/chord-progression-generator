{
  "name": "@lainnao/random-chord-progression-generator",
  "version": "0.1.0",
  "description": "A random chord progression generator for testing purposes",
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": "Please use npm"
  },
  "scripts": {
    "test": "bun test",
    "build": "rimraf ./dist && tsc"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "preset": "ts-jest/presets/js-with-ts-esm",
    "transformIgnorePatterns": [
      "/node_modules/(?!@lainnao).+\\.js$"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@lainnao/chord-progression-parser-node": "^0.4.3"
  }
}
